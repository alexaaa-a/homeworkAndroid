<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    card_view:cardBackgroundColor="@color/light_pink"
    card_view:cardCornerRadius="4dp"
    card_view:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/gg"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:src="@drawable/kidcat"
            android:scaleType="centerCrop"
            card_view:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="25sp"
            android:textColor="@color/black"
            card_view:layout_constraintStart_toEndOf="@id/gg"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/quote"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/quote"
            android:textSize="15sp"
            card_view:layout_constraintTop_toBottomOf="@id/name"
            card_view:layout_constraintStart_toEndOf="@id/gg"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_heart_broken_24"
            android:layout_marginStart="10dp"
            card_view:layout_constraintTop_toBottomOf="@id/quote"
            card_view:layout_constraintStart_toEndOf="@id/gg"
            android:layout_marginTop="7dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
